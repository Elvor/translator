<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_padding">

    <TextView
        android:id="@+id/query"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/target_language"
        app:layout_constraintEnd_toStartOf="@id/source_language"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/source_language"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/target_language"
        app:layout_constraintEnd_toStartOf="@id/target_language" />

    <TextView
        android:id="@+id/target_language"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>